{
  "name": "Proofer",
  "version": "0.3.0",
  "main": "server.js",
  "description": "Proofer App. React + Apollo(GraphQL) + Next.js",
  "author": "Proofer",
  "license": "Private",
  "repository": "https://bitbucket.org/proofer1/frontend-react",
  "scripts": {
    "start": "NODE_ENV=${NODE_ENV} BABEL_ENV=${ENVIRONMENT} node ./node_modules/.bin/pm2 start server.js -i max --attach --no-daemon",
    "stop": "node ./node_modules/.bin/pm2 stop server.js",
    "restart": "npm run stop && npm run build && npm run start",
    "build": "npm run clean-cache && NODE_ENV=${NODE_ENV} BABEL_ENV=${ENVIRONMENT} next build",
    "clean-cache": "rimraf ./node_modules/.cache",
    "dev": "npm run clean-cache && node server.js",
    "dev:next": "npm run clean-cache && next",
    "start:next": "node ./node_modules/.bin/pm2 start npm --name \"next\" -- start",
    "analyze": "ANALYZE_BUILD=true npm run build",
    "lint-staged": "lint-staged",
    "release": "release",
    "graphql:play": "graphql playground",
    "graphql:update_schema": "graphql get-schema",
    "graphql:see_graph": "graphql voyager",
    "standard-fix": "standard --fix ./components/*.js"
  },
  "dependencies": {
    "apollo-fetch": "^0.6.0",
    "apollo-link": "^0.5.4",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "cors": "2.8.4",
    "cross-env": "^5.1.1",
    "cross-fetch": "^1.1.1",
    "draft-js": "^0.10.4",
    "draft-js-counter-plugin": "^2.0.1",
    "draft-js-emoji-plugin": "^2.0.1",
    "draft-js-hashtag-plugin": "^2.0.1",
    "draft-js-plugins-editor": "^2.0.3",
    "draftjs-to-html": "^0.8.1",
    "express": "4.16.2",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.6.0",
    "helmet": "^3.9.0",
    "immutable": "^3.8.2",
    "ip": "1.1.5",
    "isomorphic-fetch": "2.2.1",
    "js-cookie": "^2.2.0",
    "lru-cache": "4.1.1",
    "moment": "^2.19.4",
    "next": "4.2.1",
    "next-cookies": "^1.0.2",
    "next-routes": "1.2.0",
    "node-sass": "^4.7.2",
    "offline-plugin": "^4.8.5",
    "pm2": "^2.8.0",
    "rc-time-picker": "^3.2.1",
    "react": "^16.2.0",
    "react-apollo": "^1.4.16",
    "react-circular-progressbar": "^0.5.0",
    "react-color": "^2.13.8",
    "react-dom": "^16.2.0",
    "react-drag-and-drop": "^2.4.0",
    "react-dropzone": "^4.2.3",
    "react-gravatar": "^2.6.3",
    "react-helmet": "5.2.0",
    "react-lazyload": "^2.3.0",
    "react-masonry-infinite": "^1.2.1",
    "react-notify-toast": "^0.4.0",
    "react-scroll": "^1.7.3",
    "react-search-input": "^0.11.3",
    "react-tag-input": "^4.7.2",
    "redux": "3.7.2",
    "semantic-ui-react": "^0.77.1",
    "twitter-text": "^1.14.7"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-plugin-inline-react-svg": "^0.5.2",
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-inline-import-graphql-ast": "^2.0.4",
    "babel-plugin-transform-assets-import-to-string": "^1.0.1",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "css-loader": "^0.28.7",
    "lint-staged": "6.0.0",
    "ngrok": "2.2.24",
    "prettier": "1.9.1",
    "release": "3.0.2",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "2.9.1"
  },
  "engines": {
    "node": ">=8.1.0",
    "npm": ">=5"
  },
  "pre-commit": "lint-staged",
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "lint-staged": {
    "*.js": "standard",
    "bin/*": "standard"
  }
}
